<?xml version="1.0" ?>
<zbe>
	<bin>
		<graphics>
			<gfx bin="gfx/01-orangeShuttle.img.bin" w="44" h="55" top="3" left="8"/>
			<gfx bin="gfx/02-moon.img.bin" w="32" h="32" top="0" left="0"/>
			<gfx bin="gfx/04-plus.img.bin" w="32" h="32" top="0" left="0"/>
		</graphics>
		<tilesets>
			<tileset bin="gfx/03-bgTiles.img.bin" />
		</tilesets>
		<palettes>
			<palette bin="gfx/01-orangeShuttle.pal.bin"/>
			<palette bin="gfx/02-moon.pal.bin"/>
			<palette bin="gfx/04-plus.pal.bin" />
			<palette bin="gfx/03-bgTiles.pal.bin" />
		</palettes>
	</bin>
	<backgrounds>
		<background palette="3" xml="bigBg.xml"/>
	</backgrounds>
	<objects>
		<object weight="45">
			<animations>
				<animation>
					<frame id="2" pal="2" time="10" />
				</animation>
			</animations>
		</object>
	</objects>
	<levels>
		<level timer="180" w="32" h="32">
			<name>First</name>
			<exp>
				<line>This is simply to test the</line>
				<line>graphical testing framework,</line>
				<line>you should see a blank screen</line>
				<line>for three seconds.</line>
			</exp>
			<debug>
				<line>You must be tripping</line>
			</debug>
			<backgrounds tileset="0">
			</backgrounds>
			<objects>
			</objects>
			<heroes>
			</heroes>
		</level>
		<level timer="900" w="2048" h="2048">
			<name>Scrolling Background</name>
			<exp>
				<!----                                ---->
				<line>This test will test scrolling</line>
				<line>backgrounds. You should have</line>
				<line>a hero in your control that you</line>
				<line>can move around the level for</line>
				<line>15 seconds. The background</line>
				<line>should scroll without the</line>
				<line>pattern becoming distorted.</line>
			</exp>
			<debug>
				<line>Something went wrong in the</line>
				<line>background::update() function.</line>
			</debug>
			<backgrounds tileset="0">
				<background layer="0" id="0" distance="1" />
			</backgrounds>
			<objects>
			</objects>
			<heroes>
				<hero id="0" x="128" y="96" hgrav="0" vgrav="0" />
			</heroes>
		</level>
		<level timer="900" w="2048" h="128">
			<!----                            ---->
			<name>Parallax Scrolling BG</name>
			<exp>
				<!----                               ---->
				<line>This test will test parallax</line>
				<line>scrolling backgrounds. You</line>
				<line>should have a hero in your</line>
				<line>control that you can move</line>
				<line>left and right for 15 seconds.</line>
				<line>The 4 layers of background</line>
				<line>should scroll at different</line>
				<line>speeds.</line>
			</exp>
			<debug>
				<line>Something went wrong in the</line>
				<line>background::update() function.</line>
				<line>Specifically, the call to</line>
				<line>bgScroll().</line>
			</debug>
			<backgrounds tileset="0">
				<background layer="0" id="0" distance="1" />
			</backgrounds>
			<objects>
			</objects>
			<heroes>
				<hero id="0" x="128" y="96" hgrav="1" vgrav="0"/>
			</heroes>
		</level>
		<level timer="900" w="256" h="192">
			<!----				--->
			<name>Simple collision </name>
			<exp>
				<line>Test collision with 2 objects</line>
				<line>An objects falls</line>
				<line>onto another and</line>
				<line>stacks on top</line>
			</exp>
			<debug>
				<line>Something went wrong in</line>
				<line>the collision detection</line>
			</debug>
			<backgrounds>
			</backgrounds>
			<objects>
				<object id="0" x="100" y="0" hgrav="0" vgrav="0.25">
				<object id="0" x="100" y="100" hgrav="0" vgrav="0.25">
			</objects>
		</level>
		<level timer="900" w="256" h="192">
			<!----				--->
			<name>Moveable object test </name>
			<exp>
				<line>Test collision with 2 objects</line>
				<line> and a hero that can move</line>
				<line>ojects around the level</line>
			</exp>
			<debug>
				<line>Something went wrong in</line>
				<line>the collision detection</line>
			</debug>
			<backgrounds>
			</backgrounds>
			<objects>
				<object id="0" x="100" y="0" hgrav="0" vgrav="0.25">
				<object id="0" x="100" y="100" hgrav="0" vgrav="0.25">
			</objects>
			<heroes>
				<hero id="1" x="0" y="0" hgrav="0" vgrav="0.25">
			</heroes>
		</level>
		<level timer="900" w="256" h="192">
			<!----				--->
			<name>Fun with objects</name>
			<exp>
				<line>Test the boundries</line>
				<line>of the level with </line>
				<line>4 objects with different</line>
				<line>acceleration vectors</line>
			</exp>
			<debug>
				<line>Something went wrong in</line>
				<line>the collision detection</line>
			</debug>
			<backgrounds>
			</backgrounds>
			<objects>
				<object id="0" x="128" y="64" hgrav="0.1" vgrav="0">
				<object id="0" x="128" y="96" hgrav="0" vgrav="0.1">
				<object id="0" x="96" y="64" hgrav="0" vgrav="-0.1">
				<object id="0" x="96" y="96" hgrav="-0.1" vgrav="0">
			</objects>
		</level>


		
	</levels>
</zbe>
